---
export interface Props {
  pageTitle: string;
  pageDesc: string;
  pageImg: string;
}

const { pageTitle, pageDesc, pageImg } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={pageDesc} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index,follow" />
    <meta name="keywords" content="james bermudo, designer, blog" />
    <title>{pageTitle}</title>
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="James Bermudo" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDesc} />
    <meta property="og:image" content={pageImg} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:creator" content="@jcebermudo" />
    <meta property="twitter:image" content={pageImg} />
    <meta property="twitter:description" content={pageDesc} />
  </head>
  <body>
    <div class="maincontainer">
      <slot />
    </div>
  </body>
  <style is:global>
    hr {
      border-color: rgb(255, 255, 255);
      opacity: 20%;
    }

    a {
      text-decoration: underline;
      color: black;
      text-underline-offset: 1.5px;
      text-decoration-color: rgb(179, 179, 179);
      text-decoration-thickness: 1.5px;
      transition: text-decoration-color 0.2s ease-in-out;
    }

    a:hover {
      text-decoration-color: #000000;
    }

    .maincontainer {
      display: flex;
      max-width: 600px;
      justify-content: center;
      margin: auto;
    }

    body {
      margin-left: 15px;
      margin-right: 15px;
      margin-top: 10px;
      margin-bottom: 0;
    }

    body {
      opacity: 0;
      animation: fadeIn 0.6s ease-in forwards;
    }

    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    ::selection {
      color: white;
      background: black;
    }

    body {
      font-family: "Inter", sans-serif;
      color: black;
      background-color: white;
    }

    @font-face {
      font-family: "Apercu";
      src: url("/fonts/Inter.var.woff2") format("woff2");
      font-weight: normal;
      font-style: normal;
      font-display: block;
    }
  </style>
</html>

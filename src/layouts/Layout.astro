---
export interface Props {
  pageTitle: string;
  pageDesc: string;
  pageImg: string;
}

const { pageTitle, pageDesc, pageImg } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={pageDesc} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index,follow" />
    <meta name="keywords" content="james bermudo, designer, blog" />
    <title>{pageTitle}</title>
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="James Bermudo" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDesc} />
    <meta property="og:image" content={pageImg} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:creator" content="@jcebermudo" />
    <meta property="twitter:image" content={pageImg} />
    <meta property="twitter:description" content={pageDesc} />
  </head>
  <body>
    <div class="navcontainer">
      <div class="nav">
        <a class="mainlink" href="/">James Bermudo</a>
        <div class="navlinks">
          <ul class="listlinks">
            <li class="sociallist">
              <a
                href="mailto:bermudo.elumba@gmail.com"
                class="link"
                target="_blank">Email</a
              >
            </li>
            <li class="sociallist">
              <a
                href="https://twitter.com/jcebermudo"
                class="link"
                target="_blank">Twitter</a
              >
            </li>
            <li class="sociallist">
              <a
                href="https://www.linkedin.com/in/jcebermudo/"
                class="link"
                target="_blank">LinkedIn</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="maincontainer">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  hr {
    border-color: rgb(255, 255, 255);
    opacity: 20%;
  }

  a {
    text-decoration: underline;
    color: black;
    text-underline-offset: 2px;
  }

  .mainlink {
    text-decoration: none;
    color: black;
    font-weight: 400;
    font-size: 20px;
  }

  .listlinks {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 15px;
  }

  .nav {
    display: flex;
    max-width: 800px;
    margin: auto;
    align-items: center;
    justify-content: space-between;
    padding-left: 15px;
    padding-right: 15px;
  }

  .navcontainer {
    padding-bottom: 20px;
    padding-top: 10px;
    border-bottom: 1px solid #d6d6d6;
    position: sticky;
    top: 0;
    background-color: white; /* or any color that matches your design */
    z-index: 1000; /* or any high number to ensure the navbar is on top of other elements */
    margin-left: -15px;
    margin-right: -15px;
  }

  .maincontainer {
    display: flex;
    max-width: 800px;
    justify-content: center;
    margin: auto;
  }

  body {
    margin-left: 15px;
    margin-right: 15px;
    margin-top: 10px;
    margin-bottom: 0;
  }

  body {
    opacity: 0;
    animation: fadeIn 0.6s ease-in forwards;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  ::selection {
    color: white;
    background: black;
  }

  body {
    font-family: "Inter", sans-serif;
    color: black;
    background-color: white;
  }

  @font-face {
    font-family: "Inter";
    src: url("/fonts/Inter-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }
</style>

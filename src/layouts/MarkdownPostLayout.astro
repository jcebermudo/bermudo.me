---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout
  pageTitle={frontmatter.title}
  ,
  pageDesc={frontmatter.description}
  ,
  pageImg={frontmatter.image}
>
  <main>
    <a href="/" class="link">Go back to main page</a>
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.date}</p>
    <img src={frontmatter.image} alt="blog-image" />
    <div class="content">
      <slot />
    </div>
    <div class="socials">
      <a target="_blank" href="https://www.linkedin.com/in/jcebermudo/" class="link">LinkedIn</a>
      <a target="_blank" href="https://twitter.com/jcebermudo" class="link">Twitter</a>
      <a target="_blank" href="https://github.com/jcebermudo" class="link">GitHub</a>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 700px;
    margin-right: 10px;
    margin-left: 10px;
    margin-bottom: 30px;
    margin-top: 30px;
    font-size: 16px;
    font-weight: normal;
    color: black;
  }

  @media (min-width: 1024px) {
    main {
      margin: 100px;
    }
  }

  img {
    max-width: 100%;
    max-height: 100%;
  }

  h1 {
    color: black;
    font-size: 24px;
    font-weight: normal;
    margin-top: 50px;
  }

  .link {
    text-decoration: underline;
    text-underline-offset: 2px;
    color: black;
  }

  .content {
    margin-top: 30px;
  }

  .content :global(a) {
    color: black;
  }

  .content :global(img) {
    max-width: 100%;
    max-height: 100%;
    margin-top: 30px;
  }

  .content :global(video) {
    max-width: 100%;
    max-height: 100%;
    margin-top: 30px;
  }

  .socials {
    display: flex;
    gap: 20px;
    margin-top: 50px;
  }
</style>

---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout
  pageTitle={frontmatter.title}
  ,
  pageDesc={frontmatter.description}
  ,
  pageImg={frontmatter.image}
>
  <main>
    <h1>{frontmatter.title}</h1>
    <p class="date">{frontmatter.date}</p>
    <img src={frontmatter.image} alt="blog-image" />
    <div class="content">
      <slot />
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    font-weight: normal;
    color: black;
  }

  img {
    width: 100%;
    height: auto;
  }

  h1 {
    color: black;
    font-size: 30px;
    font-weight: normal;
    margin-top: 40px;
  }

  .date {
    font-size: 16px;
    color: rgb(123, 123, 123);
  }

  .link {
    text-decoration: underline;
    text-underline-offset: 2px;
    color: black;
  }

  .content {
    margin-top: 30px;
    margin-bottom: 100px;
    font-size: 20px;
  }

  .content :global(a) {
    color: black;
  }

  .content :global(img) {
    max-width: 100%;
    max-height: 100%;
    margin-top: 30px;
  }

  .content :global(video) {
    width: 100%;
    height: auto;
    margin-top: 30px;
  }
</style>
